mixin custom-table(headers, items)
    table(class='table table-striped table-bordered table-sm')
        thead
            tr
                each header in headers
                    th(scop='col')= header
        tbody
            each item in items
                tr
                    each header in headers
                        td= item[header]


doctype html
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
html(lang="en")
    head
        title Week #{weekNum} Stats
    body
        div(class='container')
            h1(class='display-4') Week #{weekNum}
            p(class='lead') Total points scored by starting RBs for each team
            +custom-table(teamRbsHeaders, teamRbs)
            br
            p(class='lead') Total points scored by starting WRs for each team
            +custom-table(teamWrsHeaders, teamWrs)
            br
            p(class='lead') Total points scored by players on bench for each team
            +custom-table(teamBenchHeaders, teamBench)
            br
            p(class='lead') Week #{weekNum} QB rankings
            +custom-table(qbRanksHeaders, qbRanks)
            br
            p(class='lead') Week #{weekNum} WR rankings
            +custom-table(wrRanksHeaders, wrRanks)
            br
            p(class='lead') Week #{weekNum} RB rankings
            +custom-table(rbRanksHeaders, rbRanks)
            br
            p(class='lead') Week #{weekNum} TE rankings
            +custom-table(teRanksHeaders, teRanks)